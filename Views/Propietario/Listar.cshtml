<div class="d-flex justify-content-center mb-3 gap-2">
    <a class="btn btn-success" asp-action="Crear">Agregar nuevo propietario</a>
</div>

<table class="table">
    <thead class="text-black bg-light bg-gradient">
        <tr class="text-center">
            <th scope="col">DNI</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Telefono</th>
            <th scope="col">Email</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody class="text-light align-middle bg-table-p bg-gradient">
        @foreach (var propietario in Model)
        {
            <tr class="text-center">
                <td>@propietario.DNIPropietario</td>
                <td>@propietario.Nombre</td>
                <td>@propietario.Apellido</td>
                <td>@propietario.Celular</td>
                <td>@propietario.Email</td>
                <td>
                    <a class="btn btn-secondary" asp-action="Detalle" title="Detalles"
                        asp-route-dni="@propietario.DNIPropietario">üìú</a>

                    <a class="btn btn-primary" asp-action="Editar" title="Editar"
                        asp-route-dni="@propietario.DNIPropietario">‚úèÔ∏è</a>

                    @if (User.IsInRole("administrador"))
                    {
                        <form asp-action="Eliminar" method="post" style="display:inline;">
                            <input type="hidden" name="dni" value="@propietario.DNIPropietario" />
                            <button title="Eliminar" type="button" class="btn btn-danger btn-eliminar">üóëÔ∏è</button>
                        </form>

                    }
                    else
                    {
                        <span class="btn btn-danger" style="opacity: 0.5; cursor: not-allowed;"
                            title="Usted no tiene permiso para realizar esta acci√≥n">
                            üóëÔ∏è
                        </span>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPaginas > 1)
{
    <nav aria-label="Paginaci√≥n">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                var routeValues = new Dictionary<string, object>
                {
                { "pagina", i }
                };

                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Listar", routeValues)">@i</a>
                </li>
            }
        </ul>
    </nav>
}


<!-- alert confimr -->

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Seleccionamos todos los botones con clase btn-eliminar
        const botonesEliminar = document.querySelectorAll('.btn-eliminar');

        botonesEliminar.forEach(function (boton) {
            boton.addEventListener('click', function (e) {
                e.preventDefault(); // Prevenimos el env√≠o autom√°tico

                const form = boton.closest('form'); // Obtenemos el formulario padre

                Swal.fire({
                    title: '¬øEst√°s seguro?',
                    text: "¬øSeguro que deseas eliminar este propietario?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'S√≠, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit(); // Enviamos el formulario si confirma
                    }
                });
            });
        });
    });
</script>
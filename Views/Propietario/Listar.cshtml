<div class="d-flex justify-content-center mb-3 gap-2">
    <a class="btn btn-primary" asp-action="Crear">Agregar nuevo propietario</a>
</div>

<table class="table">
    <thead>
        <tr class="text-center">
            <th scope="col">DNI</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Telefono</th>
            <th scope="col">Email</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var propietario in Model)
        {
            <tr class="text-center">
                <td>@propietario.DNIPropietario</td>
                <td>@propietario.Nombre</td>
                <td>@propietario.Apellido</td>
                <td>@propietario.Celular</td>
                <td>@propietario.Email</td>
                <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-dni="@propietario.DNIPropietario">Editar</a>
                    <a class="btn btn-secondary" asp-action="Detalle" asp-route-dni="@propietario.DNIPropietario">Detalle
                    </a>
                    <form asp-action="Eliminar" method="post" style="display:inline;">
                        <input type="hidden" name="dni" value="@propietario.DNIPropietario" />
                        <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Â¿Seguro que deseas eliminar este propietario?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
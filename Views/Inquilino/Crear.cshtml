@model InmobiliariaApp.Models.Inquilino
@{
    ViewData["Title"] = "Crear inquilinos";
}

<h1> Crear </h1>

<form asp-action="Insertar">
    <div class="d-flex flex-column gap-2 justify-content-center align-items-center">
        <div class="dni">
            <label for="">DNI</label>
            <input type="text" name="DNIInquilino" id="" placeholder="Ingrese el DNI del inquilino" required
                asp-for="DNIInquilino">
        </div>
        <div class="nombre">
            <label for="">Nombre</label>
            <input type="text" name="nombre" id="" placeholder="Ingrese el nombre del inquilino" required
                asp-for="Nombre">
        </div>
        <div class="apellido">
            <label for="">Apellido</label>
            <input type="text" name="apellido" id="" placeholder="Ingrese el apellido del inquilino" required
                asp-for="Apellido">
        </div>
        <div class="celular">
            <label for="">Telefono</label>
            <input type="text" name="celular" id="" placeholder="Ingrese el telefono del inquilino" required
                asp-for="Celular">
        </div>
        <div class="email">
            <label for="">Email</label>
            <input type="email" name="email" id="" placeholder="Ingrese el email del inquilino" required
                asp-for="Email">
        </div>
        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-success" />
        </div>
    </div>
    <div class="d-flex justify-content-center m-5 gap-2">
    <a class="btn btn-primary text-center" asp-area="" asp-controller="Inquilino" asp-action="Listar">Volver
        listado</a>
        </div>
    </div>
</form>